{
  "name": "vscode-fluent-bit",
  "displayName": "vscode-fluent-bit",
  "description": "fluent-bit language support for Visual Studio Code",
  "version": "0.1.1",
  "publisher": "sh-cho",
  "icon": "./images/extension-icon.png",
  "engines": {
    "vscode": "^1.14.0"
  },
  "license": "MIT",
  "homepage": "https://github.com/sh-cho/fluent-bit-lsp/clients/vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/sh-cho/fluent-bit-lsp.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b -w"
  },
  "activationEvents": [
    "workspaceContains:fluent-bit.conf",
    "workspaceContains:*/fluent-bit.conf",
    "onLanguage:fluent-bit"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "fluent-bit",
        "aliases": [
          "fluent-bit conf",
          "fluent-bit"
        ],
        "extensions": [
          ".conf"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/fluent-bit.svg",
          "dark": "./images/fluent-bit.svg"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "fluent-bit configuration",
      "properties": {
        "fluentbitLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "packageManager": "pnpm@8.15.8",
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.14",
    "@types/vscode": "^1.92.0",
    "@vscode/vsce": "^2.31.1",
    "typescript": "^5.5.4"
  }
}
