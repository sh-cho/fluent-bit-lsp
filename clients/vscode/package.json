{
  "name": "vscode-fluent-bit",
  "displayName": "vscode-fluent-bit",
  "description": "fluent-bit language support for Visual Studio Code",
  "private": true,
  "version": "0.1.1",
  "publisher": "sh-cho",
  "icon": "./images/extension-icon.png",
  "engines": {
    "vscode": "^1.78.0"
  },
  "license": "MIT OR Apache-2.0",
  "homepage": "https://github.com/sh-cho/fluent-bit-lsp/clients/vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/sh-cho/fluent-bit-lsp.git"
  },
  "keywords": [
    "fluent-bit",
    "lsp"
  ],
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "scripts": {
    "vscode:prepublish": "pnpm run build-base --minify",
    "package": "vsce package -o fluent-bit-lsp.vsix",
    "build-base": "esbuild ./src/main.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node --target=node20",
    "build": "pnpm run build-base --sourcemap",
    "watch": "pnpm run build-base --sourcemap --watch"
  },
  "activationEvents": [
    "workspaceContains:fluent-bit.conf",
    "workspaceContains:*/fluent-bit.conf"
  ],
  "main": "./out/main",
  "contributes": {
    "languages": [
      {
        "id": "fluent-bit",
        "aliases": [
          "fluent-bit conf",
          "fluent-bit"
        ],
        "extensions": [
          ".conf"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/fluent-bit.svg",
          "dark": "./images/fluent-bit.svg"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "fluent-bit configuration",
      "properties": {
        "fluentbitLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "packageManager": "pnpm@8.15.8",
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.14",
    "@types/vscode": "~1.78.1",
    "@vscode/vsce": "^2.31.1",
    "esbuild": "^0.23.0",
    "ovsx": "^0.9.2",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4"
  }
}
