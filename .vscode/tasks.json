{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Extension",
      "group": "build",
      "type": "npm",
      "script": "build",
      "path": "clients/vscode/",
      "problemMatcher": {
        "base": "$tsc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/clients/vscode"
        ]
      }
    },
    {
      "label": "Build Server",
      "group": "build",
      "type": "shell",
      "command": "cargo build --package fluent-bit-language-server",
      "problemMatcher": "$rustc"
    },
    {
      "label": "Build Server and Extension",
      "dependsOn": [
        "Build Server",
        "Build Extension"
      ],
      "problemMatcher": "$rustc"
    }
  ]
}
